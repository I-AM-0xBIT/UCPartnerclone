<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/userimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:src="@drawable/ic_add_black_24dp" />
    <!--android:src="@drawable/palladium1"-->

    <TextView
        android:id="@+id/username"
        android:layout_width="301dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/userimage"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@+id/userimage"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Hello, Abhishek Jadhav"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Hello, Abhishek Jadhav" />

    <TextView
        android:id="@+id/info"
        android:layout_width="301dp"
        android:layout_height="61dp"

        android:layout_below="@+id/username"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@+id/userimage"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="You are few steps away from completing your profile"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:fontFamily="@font/cantata_one"
            android:paddingLeft="15dp"
            android:paddingTop="14dp"
            android:text="Identity Verification"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:fontFamily="@font/cantata_one"
            android:paddingLeft="15dp"
            android:paddingTop="14dp"
            android:text="About Me"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:fontFamily="@font/cantata_one"
            android:paddingLeft="15dp"
            android:paddingTop="14dp"
            android:text="Award and Certificate Photos"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:fontFamily="@font/cantata_one"
            android:paddingLeft="15dp"
            android:paddingTop="14dp"
            android:text="Add your service location"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:fontFamily="@font/cantata_one"
            android:paddingLeft="15dp"
            android:paddingTop="14dp"
            android:text="Submit References"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:fontFamily="@font/cantata_one"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:text="Upload photos of your work"
                android:textSize="17sp"
                android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>